<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.FlowPane?>
<BorderPane stylesheets="@../style/main_window.css" xmlns="http://javafx.com/javafx/8.0.121"
			xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.ralena.cantika.MainController">
	<top>
		<VBox BorderPane.alignment="CENTER">
			<MenuBar>
				<menus>
					<Menu mnemonicParsing="true" text="File">
						<items>
							<MenuItem text="_New">
								<accelerator>
									<KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP"
														shortcut="UP"/>
								</accelerator>
							</MenuItem>
							<MenuItem text="_Open"/>
							<MenuItem onAction="#saveSentences" text="_Save">
								<accelerator>
									<KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP"
														shortcut="UP"/>
								</accelerator>
							</MenuItem>
							<MenuItem onAction="#exitProgram" text="_Quit">
								<accelerator>
									<KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP"
														shortcut="UP"/>
								</accelerator>
							</MenuItem>
						</items>
					</Menu>
					<Menu mnemonicParsing="true" text="Edit">
						<items>
							<MenuItem mnemonicParsing="true" onAction="#openAddSentenceWindow" text="_Add">
								<accelerator>
									<KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="UP"
														shortcut="UP"/>
								</accelerator>
							</MenuItem>
							<MenuItem mnemonicParsing="true" onAction="#deleteSentences" text="_Delete">
								<accelerator>
									<KeyCodeCombination alt="UP" code="DELETE" control="UP" meta="UP" shift="UP"
														shortcut="UP"/>
								</accelerator>
							</MenuItem>
						</items>
					</Menu>
					<Menu mnemonicParsing="true" text="Help">
						<items>
							<MenuItem mnemonicParsing="false" onAction="#displayAbout" text="About"/>
						</items>
					</Menu>
				</menus>
			</MenuBar>
			<ToolBar>
				<HBox>
					<Button onAction="#openAddSentenceWindow" text="Add">
						<tooltip>
							<Tooltip text="Add sentences"/>
						</tooltip>
						<graphic>
							<ImageView preserveRatio="true">
								<Image requestedHeight="16" requestedWidth="16" url="@../drawable/icon_add.png"/>
							</ImageView>
						</graphic>
					</Button>
					<Button mnemonicParsing="false" onAction="#deleteSentences" text="Delete">
						<tooltip>
							<Tooltip text="Delete sentences"/>
						</tooltip>
						<graphic>
							<ImageView preserveRatio="true">
								<Image requestedHeight="16" requestedWidth="16" url="@../drawable/icon_delete.png"/>
							</ImageView>
						</graphic>
					</Button>
					<Button mnemonicParsing="false" onAction="#refreshWordCounts" text="Refresh Counts">
						<tooltip>
							<Tooltip text="Refresh the word counts"/>
						</tooltip>
						<graphic>
							<ImageView preserveRatio="true">
								<Image requestedHeight="16" requestedWidth="16" url="@../drawable/icon_refresh.png"/>
							</ImageView>
						</graphic>
					</Button>
				</HBox>
			</ToolBar>
		</VBox>
	</top>
	<center>
		<AnchorPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
			<children>
				<SplitPane fx:id="splitPaneLeft" dividerPositions="0.2, 0.8" AnchorPane.bottomAnchor="0.0"
						   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
					<AnchorPane prefHeight="200.0" prefWidth="200.0" SplitPane.resizableWithParent="false"/>
					<SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="960.0">
						<ListView fx:id="sentenceListView"/>
						<AnchorPane minHeight="0.0" minWidth="30.0">
							<VBox styleClass="vbox" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
								  AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
								<HBox styleClass="hbox">
									<TextField fx:id="sentenceEdit" HBox.hgrow="ALWAYS"/>
									<Button mnemonicParsing="false" onAction="#analyzeText" text="Analyze"/>
								</HBox>
								<FlowPane fx:id="sentenceDetailHBox" styleClass="detailhbox" prefWrapLength="Infinity">
								</FlowPane>
								<Label fx:id="analysisLabel" maxHeight="Infinity" maxWidth="Infinity"
									   styleClass="analysis-label" VBox.vgrow="ALWAYS"/>
							</VBox>
						</AnchorPane>
					</SplitPane>
					<AnchorPane fx:id="paneRight" maxHeight="Infinity" prefWidth="200.0"
								SplitPane.resizableWithParent="false">
						<children>
							<TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE"
									 AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
									 AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
								<tabs>
									<Tab text="Course">
										<content>
											<AnchorPane>
												<children>
													<ListView AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
															  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
															  fx:id="courseWordListView"/>
												</children>
											</AnchorPane>
										</content>
									</Tab>
									<Tab text="Frequency">
										<content>
											<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0"
														prefWidth="200.0">
												<children>
													<ListView AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
															  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
															  fx:id="frequencyWordListView"/>
												</children>
											</AnchorPane>
										</content>
									</Tab>
								</tabs>
							</TabPane>
						</children>
					</AnchorPane>
				</SplitPane>
			</children>
		</AnchorPane>
	</center>

</BorderPane>
